<!DOCTYPE html>
<html>
  <head>
  	<script type="text/javascript" src=/javascripts/jquery.min.js></script>
  	<script type="text/javascript" src=/javascripts/validacao.js></script>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/bootstrap/css/bootstrap.min.css'/>
  </head>
  <body >
  	<div style="height:1px">
  	<nav>
  		<a href="/cliente"><button class="btn btn-secondary btn-lg"  style="font-size:30px;margin-left:34%;margin-top:100px">Cliente</button></a>
  		<a href="/funcionario"><button class="btn btn-secondary btn-lg"  style="font-size:30px;margin-top:100px">Funcionário</button></a>
  		<a href="/produto"><button class="btn btn-secondary btn-lg"  style="font-size:30px;margin-top:100px">Produto</button></a>
  		<a href="/venda"><button class="btn btn-secondary btn-lg"  style="font-size:30px;margin-top:100px">Venda</button></a>
  	</nav>
    </div>
    <div style="position:absolute;margin-left:34%;margin-top:200px">
      <form method="POST" action="/cadastrar-produto" onsubmit="return validacaoProduto()" class="form-horizontal">
        <h1 style="color:#ffffff">Produtos</h1>
        <p style="background:transparent"><h4 style="color:#ffffff">Nome:</h4><input type="text" name="nome" id="nome"> </p>
        <p style="background:transparent"><h4 style="color:#ffffff">Descrição:</h4><input type="text" name="descricao" id="descricao"> </p>
        <p style="background:transparent"><h4 style="color:#ffffff">Valor de compra:</h4><input type="text" name="valorcompra" id="valorcompra"> </p>
        <p style="background:transparent"><h4 style="color:#ffffff">Valor de venda:</h4><input type="text" name="valorvenda" id="valorvenda"> </p>
        <p style="background:transparent"><h4 style="color:#ffffff">Quantidade em estoque:</h4><input type="text" name="quantidade" id="quantidade"> </p>
        <input class="btn btn-secondary btn-light" type="submit" value="Cadastrar">
      </form>
      <br>
      <div class="table-responsive">
    <table class="table table-bordered" style="color:#ffffff">
      <tr>
        <td><b>Id</b></td>
        <td><b>Nome</b></td>
        <td><b>Descricao</b></td>
        <td><b>Valor de compra</b></td>
        <td><b>Valor de venda</b></td>
        <td><b>Quantidade em estoque</b></td>
      </tr>
      <% for(i=0;i<produtos.length;i++){ %>
      <tr>
        <td><%= produtos[i].idproduto%></td>
        <td><%= produtos[i].nome%></td>
        <td><%= produtos[i].descricao%></td>
        <td><%= produtos[i].valorcompra%></td>
        <td><%= produtos[i].valorvenda%></td>
        <td><%= produtos[i].quantidade%></td>
        <td><a href = "/excluir-produto?idproduto=<%= produtos[i].idproduto%>" onclick = "return temcerteza()"><button type="button" class="btn btn-danger">Excluir</button></a></td>
      </tr>
      <%}%>
    </table>
  </div>

    </div>
  </body>
</html>
